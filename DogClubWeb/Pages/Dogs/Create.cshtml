@page
@model DogClubWeb.Pages.Dogs.CreateModel

@{
	ViewData["Title"] = "Create";
}

<h1 class="mb-5">Create</h1>

<h4>Dog</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Dog.Name" class="control-label"></label>
				<input asp-for="Dog.Name" class="form-control" />
				<span asp-validation-for="Dog.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Dog.BirthName" class="control-label"></label>
				<input asp-for="Dog.BirthName" class="form-control" />
				<span asp-validation-for="Dog.BirthName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Dog.Price" class="control-label"></label>
				<input asp-for="Dog.Price" class="form-control" />
				<span asp-validation-for="Dog.Price" class="text-danger"></span>
			</div>
			<div class="form-group mt-2 mb-2">
				<input type="submit" value="Create" class="btn btn-primary" />
				<a class="btn btn-secondary" asp-page="Index">Back to List</a>
			</div>
		</form>
	</div>
</div>

<div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
