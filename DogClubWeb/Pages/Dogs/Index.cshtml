@page
@model DogClubWeb.Pages.Dogs.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-5">Dogs overview</h1>

<p>
    <a class="btn btn-primary" asp-page="Create"><i class="bi bi-plus"></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dog[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dog[0].BirthName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dog[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Dog) {
        <tr class="align-middle">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a class="btn btn-outline-info" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-warning" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
